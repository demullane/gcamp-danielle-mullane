      <div class = "page-header">
        <div class = "pull-right">
          <%= link_to 'New Task', new_task_path, class: "btn btn-info" %>
        </div>
        <h1>Tasks</h1>
      </div>


      <table class = "table">
        <thead>
          <tr>
            <th>Description</th>
            <th class = "text-left">Due Date</th>
          </tr>
        </thead>

        <tbody>
          <% @tasks.each do |task| %>
            <tr>
              <td><%= link_to task.description, task %></td>
              <td><%= task.task_due_date %></td>
              <td class = "text-right">
                <%= link_to 'Edit', edit_task_path(task), class: "btn btn-info" %>
                <%= link_to 'Delete', task, class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
