<div class = "page-header">
  <div class = "pull-right">
    <%= link_to 'New Task', new_project_task_path(@project), class: "btn btn-info" %>
  </div>
  <h1>Tasks for <%= @project.name %></h1>
</div>

<ol class = "breadcrumb">
  <li><a href = "/projects">Projects</a></li>
  <li><%= link_to @project.name, project_path(@project) %></li>
  <li class = "active">Tasks</li>
</ol>

<table class = "table">
  <thead>
    <tr>
      <th>Description</th>
      <th>Complete</th>
      <th>Due Date</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @project.tasks.each do |task| %>
      <tr>
        <td>
          <%= link_to task.description, project_task_path(@project, task) %>
          &nbsp;&nbsp;<span class = "badge"><%= task.comments.count %></span>
        </td>
        <td><%= task.task_completed %></td>
        <td><%= task.task_due_date %></td>
        <td class = "text-right">
          <%= link_to "Edit", edit_project_task_path(@project, task), class: "btn btn-info" %>
          <%= link_to '<i class="glyphicon glyphicon-remove" aria-hidden="true"></i>'.html_safe, project_task_path(@project,task), method: :delete, data: { confirm: 'Are you sure?' }, id: "task_delete" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
