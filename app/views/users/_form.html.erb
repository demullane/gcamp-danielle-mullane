<%= render partial: 'shared/error', locals: { object: @user } %>

<div class = "col-md-12">
</div>

<%= form_for @user, html: {class: "form-horizontal"} do |f| %>

  <div class= "form-group">
    <%= f.label :first_name, "First Name", class: "control-label col-md-2" %>
    <div class = "form-controls col-md-5">
      <%= f.text_field :first_name, class: "form-control" %>
    </div>
  </div>

  <div class = "form-group">
    <%= f.label :last_name, "Last Name", class: "control-label col-md-2" %>
    <div class = "form-controls col-md-5">
      <%= f.text_field :last_name, class: "form-control" %>
    </div>
  </div>

  <div class = "form-group">
    <%= f.label :email, "Email", class: "control-label col-md-2" %>
    <div class = "form-controls col-md-5">
      <%= f.email_field :email, class: "form-control" %>
    </div>
  </div>

  <div class = "form-group">
    <%= f.label :password, "Password", class: "control-label col-md-2" %>
    <div class = "form-controls col-md-5">
      <%= f.password_field :password, class: "form-control" %>
    </div>
  </div>

  <div class = "form-group">
    <%= f.label :password_confirmation, "Password Confirmation", class: "control-label col-md-2" %>
    <div class = "form-controls col-md-5">
      <%= f.password_field :password_confirmation, class: "form-control" %>
    </div>
  </div>

  <% if current_user.admin == true %>
    <div class = "form-group">
      <div class = "col-sm-offset-2 col-sm-10">
        <%= f.check_box :admin %>&nbsp;&nbsp;
        <%= f.label :admin, "Admin", class: "no_bold" %>
      </div>
    </div>
  <% end %>

  <div class = "form-group">
    <div class = "col-md-offset-2 col-md-4">
      <%= f.submit class: "btn btn-primary" %>
      <%= link_to "Cancel", users_path, class: "btn btn-default" %>
    </div>
  </div>

<% end %>
