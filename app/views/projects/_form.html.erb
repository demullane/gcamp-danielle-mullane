      <%= form_for @project, html: {class: "form-horizontal"} do |f| %>
        <% if @project.errors.any? %>
          <div id = "error-explanation">
            <h2><%= pluralize(@project.errors.count, "error") %> prohibited this task from being saved:</h2>
            <ul>
              <% @project.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <form class = "form-horizontal">
          <div class = "form-group">
            <%= f.label :name, "Name", class: "control-label col-md-2" %>
            <div class = "form-controls col-md-4">
              <%= f.text_field :name, class: "form-control" %>
            </div>
          </div>
          <div class = "form-group">
            <div class = "col-md-offset-2 col-md-4">
              <%= f.submit class: "btn btn-primary" %>
              <%= link_to "Cancel", projects_path, class: "btn btn-default" %>
            </div>
          </div>

        </form>

      <% end %>
